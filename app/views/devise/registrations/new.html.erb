<div class="col-md-12">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field form-group">
      <%= f.email_field :first_name, autofocus: true, class: "form-control input-lg", placeholder: "First Name (for e.g. John)" %>
    </div>

    <div class="field form-group">
      <%= f.email_field :last_name, autofocus: true, class: "form-control input-lg", placeholder: "Last Name (for e.g. Smith)" %>
    </div>

    <div class="field form-group">
      <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email (e.g. someone@example.com)" %>
    </div>

    <div class="field form-group">
      <%= f.email_field :username, autofocus: true, class: "form-control input-lg", placeholder: "Username (for e.g. john_smith)" %>
    </div>

    <div class="field form-group">
      <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password #{'('.to_s + @minimum_password_length.to_s + ' characters minimum)' if @validatable}" %>
    </div>

    <div class="field form-group">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg", placeholder: "Confirm Password" %>
    </div>

    <div class="actions form-group">
      <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>