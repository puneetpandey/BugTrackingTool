<h2>Log in</h2>

<div class="col-md-12">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group">
      <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email" %>
    </div>

    <div class="field form-group">
      <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions form-group">
      <%= f.submit "Log in", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>